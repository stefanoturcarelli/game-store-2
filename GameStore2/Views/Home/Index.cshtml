@{
    ViewData["Title"] = "Home Page";
}

<div class="text-start hero-banner">
    <div class="container">
        <h1 class="display-4" style="padding-left: 16px;">
            LevelUp Game Store
        </h1>
        <p style="padding-left: 16px;">
            Elevate Your Play, Elevate Your Game
        </p>
        <p style="padding-left: 16px;">
            @Html.ActionLink("Browse Games", "Index", "Game", new { }, new { @class = "btn btn-primary" })
        </p>
    </div>
</div>

<!-- About Us Section -->

<section class="about-us-section">
    <div class="container">
        <div class="about-us-container">
            <h2>
                About Us
            </h2>
            <p>
                We are a game store that specializes in providing the best games for
                the best prices. We have a wide selection of
                games for all platforms. We also have a wide selection of accessories
                and merchandise for all your gaming needs.
            </p>
        </div>
    </div>
</section>

<!-- Categories Section -->
<section class="categories-section">
    <div class="container">
        <div class="categories-container">
            <h2>Categories</h2>
            <div class="row">
                <div class="col-md-3 mb-3">
                    <img class="img-fluid rounded" src="~/images/platform-1.webp" alt="Playstation">
                    <h3 class="platform-name">Playstation</h3>
                    <p class="shop-now">Shop Now</p>
                </div>
                <div class="col-md-3 mb-3">
                    <img class="img-fluid rounded" src="~/images/platform-2.webp" alt="Xbox">
                    <h3 class="platform-name">Xbox</h3>
                    <p class="shop-now">Shop Now</p>
                </div>
                <div class="col-md-3 mb-3">
                    <img class="img-fluid rounded" src="~/images/platform-3.webp" alt="Nintendo">
                    <h3 class="platform-name">Nintendo</h3>
                    <p class="shop-now">Shop Now</p>
                </div>
                <div class="col-md-3 mb-3">
                    <img class="img-fluid rounded" src="~/images/platform-4.webp" alt="PC">
                    <h3>PC</h3>
                    <p class="shop-now">Shop Now</p>
                </div>
            </div>
        </div>
    </div>
</section>



